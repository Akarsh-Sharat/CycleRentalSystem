<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:src="@drawable/logo"
        android:id="@+id/logo1"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/logo1"
        android:background="@color/black"
        android:layout_marginBottom="-40dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_login_ui"
        android:backgroundTint="@color/mainbackgroundcolor"
        android:elevation="60dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Enter your Phone Number"
            android:id="@+id/label1"
            android:layout_marginTop="50dp"
            android:textColor="#FFF"
            android:textSize="22dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/label1"
            android:text="We will send you 4 digit verification code"
            android:textColor="@color/red_400"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/layout1"
            android:orientation="horizontal"
            android:layout_below="@id/label1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:background="@color/main_button_dark"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"
                android:textColor="#FFF"
                android:textSize="26dp"
                android:height="60dp"
                android:padding="10dp"
                android:layout_centerHorizontal="true"/>
            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/label1"
                android:width="150dp"
                android:height="60dp"
                android:background="@color/main_button_dark"
                android:gravity="center_vertical"
                android:hint="Phone Number"
                android:inputType="number"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="26dp" />
        </LinearLayout>


        <Button
            android:layout_below="@id/layout1"
            android:layout_marginTop="50dp"
            android:id="@+id/buttonContinue"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/main_button_dark"
            android:layout_centerHorizontal="true"
            android:textSize="22dp"
            android:padding="10dp"
            android:text="GENERATE OTP"
            />



    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>