<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/mainbackgroundcolordark"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/mainbackgroundcolor"
        android:layout_height="wrap_content">
            <TextView
            android:textSize="22dp"
            android:textColor="@color/white"
            android:text=""
            android:id="@+id/DeviceId"
            android:layout_gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">


            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Date :"
                android:layout_width="65dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"

                android:textColor="@color/white"
                android:text="N/A"
                android:id="@+id/RideDate"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Duration :"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text=""
                android:id="@+id/RideDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="From :"
                android:layout_width="65dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:textColor="@android:color/primary_text_dark"
                android:text="N/A"
                android:id="@+id/RideFromTime"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:text="To :"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="N/A"
                android:id="@+id/RideToTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
                <TextView
                    android:textSize="20dp"
                    android:text="From :"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="20dp"
                    android:text="N/A"
                    android:id="@+id/RideFromLocation"
                    android:textColor="@color/white"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="20dp"
                    android:text="To :"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="N/A"
                    android:id="@+id/RideToLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"

            android:paddingRight="10dp">
            <TextView
                android:textSize="20dp"
                android:text="Distance :"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="N/A"
                android:id="@+id/RideDistance"
                android:layout_width="85dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="Cost :"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text=""
                android:id="@+id/RideCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:textSize="20dp"
                    android:text="Applied Rate :"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="N/A"
                    android:id="@+id/RideRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>